    <script>
        const allVocabData = {
            'Day 1': [ { en: "Academic", my: "á€•á€Šá€¬á€›á€•á€ºá€†á€­á€¯á€„á€ºá€›á€¬" }, { en: "General Training", my: "á€¡á€‘á€½á€±á€‘á€½á€±á€œá€±á€·á€€á€»á€„á€·á€ºá€™á€¾á€¯" }, { en: "Essay", my: "á€…á€¬á€…á€®á€…á€¬á€€á€¯á€¶á€¸" }, { en: "Opinion", my: "á€á€˜á€±á€¬á€‘á€¬á€¸áŠ á€¡á€™á€¼á€„á€º" }, { en: "Advantage", my: "á€¡á€¬á€¸á€á€¬á€á€»á€€á€º" }, { en: "Disadvantage", my: "á€¡á€¬á€¸á€”á€Šá€ºá€¸á€á€»á€€á€º" }, { en: "Benefit", my: "á€¡á€€á€»á€­á€¯á€¸á€€á€»á€±á€¸á€‡á€°á€¸" }, { en: "Global", my: "á€€á€™á€¹á€˜á€¬á€œá€¯á€¶á€¸á€†á€­á€¯á€„á€ºá€›á€¬" }, { en: "Environment", my: "á€•á€á€ºá€á€”á€ºá€¸á€€á€»á€„á€º" }, { en: "Technology", my: "á€”á€Šá€ºá€¸á€•á€Šá€¬" }, { en: "Development", my: "á€–á€½á€¶á€·á€–á€¼á€­á€¯á€¸á€á€­á€¯á€¸á€á€€á€ºá€™á€¾á€¯" }, { en: "Communication", my: "á€†á€€á€ºá€á€½á€šá€ºá€›á€±á€¸" }, { en: "Education", my: "á€•á€Šá€¬á€›á€±á€¸" }, { en: "Society", my: "á€œá€°á€·á€¡á€–á€½á€²á€·á€¡á€…á€Šá€ºá€¸" }, { en: "Solution", my: "á€–á€¼á€±á€›á€¾á€„á€ºá€¸á€á€»á€€á€º" }, { en: "Impact", my: "á€¡á€€á€»á€­á€¯á€¸á€á€€á€ºá€›á€±á€¬á€€á€ºá€™á€¾á€¯" }, { en: "Evidence", my: "á€á€€á€ºá€á€±á€¡á€‘á€±á€¬á€€á€ºá€¡á€‘á€¬á€¸" }, { en: "Process", my: "á€œá€¯á€•á€ºá€„á€”á€ºá€¸á€…á€‰á€º" }, { en: "Issue", my: "á€•á€¼á€¿á€”á€¬" }, { en: "Research", my: "á€á€¯á€á€±á€á€”" } ],
            'Day 2': [ /* ... */ ],
            'Day 3': [ /* ... */ ],
            /* Day 4..50 already present in your file - kept as-is */
        };

        const allPhraseData = {
            'Day 1': [ { en: "In my opinion, ...", my: "á€€á€»á€½á€”á€ºá€á€±á€¬á€·á€ºá€¡á€™á€¼á€„á€ºá€¡á€›á€á€±á€¬á€·..." }, { en: "To begin with, ...", my: "á€…á€á€„á€ºá€›á€™á€šá€ºá€†á€­á€¯á€›á€„á€ºá€á€±á€¬á€·..." }, { en: "On the one hand, ...", my: "á€á€…á€ºá€–á€€á€ºá€€á€€á€¼á€Šá€·á€ºá€™á€šá€ºá€†á€­á€¯á€›á€„á€º..." } ],
            'Day 2': [ /* ... */ ],
            /* etc. */
        };

        const grammarData = [
            { en: "Simple Present Tense", my: "á€•á€…á€¹á€…á€¯á€•á€¹á€•á€”á€ºá€€á€¬á€œá€›á€­á€¯á€¸á€›á€­á€¯á€¸" },
            { en: "Present Perfect Tense", my: "á€•á€…á€¹á€…á€¯á€•á€¹á€•á€”á€ºá€€á€¬á€œá€•á€¼á€®á€¸á€…á€®á€¸" },
            { en: "Modal Verbs (can, must, should)", my: "á€€á€¼á€­á€šá€¬á€¡á€‘á€±á€¬á€€á€ºá€¡á€€á€°á€™á€»á€¬á€¸" },
            { en: "Passive Voice", my: "Passive á€¡á€á€¶" },
            { en: "Complex Sentences", my: "á€…á€¬á€€á€¼á€±á€¬á€„á€ºá€¸á€›á€¾á€¯á€•á€ºá€‘á€½á€±á€¸á€™á€»á€¬á€¸" }
        ];
